<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext https://softwaredesign.foundation/xsd/liquibase/dbchangelog-ext.xsd">

    <changeSet id="test" author="Lucas Reeh">
        <ext:alterDefaultPrivileges forPrivilegeType="USER"
                                    inSchema="my_schema"
                                    targetRole="my_role">
            <ext:grant operation="SELECT"
                       onObjects="TABLES"
                       toRole="my_other_role"
                       withGrantOption="true"/>
        </ext:alterDefaultPrivileges>
    </changeSet>

    <changeSet id="test1" author="Lucas Reeh">
        <ext:alterDefaultPrivileges forPrivilegeType="USER"
                                    inSchema="my_schema"
                                    targetRole="my_role">
            <ext:revoke operation="SELECT"
                        onObjects="TABLES"
                        fromRole="my_other_role"
                        restrict="false"
                        cascade="false"/>
        </ext:alterDefaultPrivileges>
    </changeSet>

    <changeSet id="test2" author="Lucas Reeh">
        <ext:alterDefaultPrivileges forPrivilegeType="ROLE"
                                    inSchema=""
                                    targetRole="my_role">
            <ext:revoke operation="SELECT"
                        onObjects="TABLES"
                        fromRole="my_other_role"
                        cascade="true"/>
        </ext:alterDefaultPrivileges>
    </changeSet>


</databaseChangeLog>